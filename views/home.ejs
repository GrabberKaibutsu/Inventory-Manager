  <%- include('./partials/head.ejs', {title: 'Index page'}) %>
</head>

<body>
  <nav>
    <%- include('./partials/nav.ejs') %>
  </nav>
  <h1>Index Page</h1>
  <ul> 
      <% product.forEach((item, index) => { %>
      <li>
          <a href="/main/<%= item._id %>"><%= item.name %></a>

