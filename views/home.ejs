<head>
  <%- include('./Partials/head.ejs', {title: 'Inventory Manager'}) %>
</head>

<body>
  <nav>
    <%- include('./Partials/nav.ejs') %>
  </nav>
  <ul class="product"> 
      <% product.forEach((item, index) => { %> 
      <li>
          <a href="/main/<%= item._id %>"><%= item.name %></a>
          <a class=count><%=item.count%></a>

          <form class="delete" action="/main/<%= item._id %>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE">
          </form>
      </li>
      <% }) %>
  </ul>
  <script src="/js/app.js"></script>
</body>
</html>