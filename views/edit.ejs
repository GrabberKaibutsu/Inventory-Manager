<head>
    <%- include('./partials/head.ejs', {title: `Edit ${fruit.name} | Fruit Finder`}) %>
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="hero">
        <h2>Edit a Fruit</h2>
    </section>

    <form method="POST" action="/main/<%= products._id %>?_method=PUT">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= fruit.name %>" required>
        <br>
        <label for="color">Color:</label>
        <input type="text" id="color" name="color" value="<%= fruit.color %>" required>
        <br>
        <label for="readyToEat">Ready to Eat</label>
         <input type="checkbox" name="readyToEat" id="readyToEat" <%= fruit.readyToEat ? 'checked' : '' %> >
        <input type="submit" value="Edit Fruit">
    </form>

    <%- include('./partials/footer.ejs') %>
</body>