<head>
    <%- include('./Partials/head.ejs', {title: `Edit ${product.name} | Inventory Manager`}) %>
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('./Partials/nav.ejs') %>

    <section class="hero">
        <h2>Edit a Item</h2>
    </section>

    <form method="POST" action="/main/<%= product._id %>?_method=PUT">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" required>
        <br>
        <label for="count">Count:</label>
        <input type="text" id="count" name="count" value="<%= product.count %>" required>
        <br>
        <label for="isLow">Is it low on stock</label>
         <input type="checkbox" name="isLow" id="isLow" <%= product.isLow ? 'checked' : '' %> >
        <input type="submit" value="Edit Item">
    </form>

    <%- include('./Partials/footer.ejs') %>
</body>